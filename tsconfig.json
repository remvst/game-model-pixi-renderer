{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ESNext",
        "declaration": true,
        "moduleResolution": "node",
        "strict": false,
        "strictPropertyInitialization": false,
        "esModuleInterop": true,
        "allowJs": false,
        "outDir": "./lib/esm",
        "skipLibCheck": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
